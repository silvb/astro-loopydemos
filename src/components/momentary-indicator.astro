---
interface Props {
  size: number
}

const { size } = Astro.props
const pixelSize = `${size}px`
---

<div class="momentary-indicator"></div>

<style define:vars={{ size: pixelSize }}>
  .momentary-indicator {
    position: absolute;
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    border: 10px solid var(--secondaryHighlight);
    box-sizing: border-box;
    z-index: 1;
    top: 0;
    left: 0;
    transform: scale(2);
    animation: 600ms ease-out infinite momentaryAnimation;
    pointer-events: none;
  }

  @keyframes momentaryAnimation {
    0% {
      transform: scale(1);
      border-width: 8px;
      opacity: 1;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: scale(2);
      border-width: 0px;
      opacity: 0;
    }
  }
</style>
