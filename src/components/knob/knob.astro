---
import type { Knob } from "@types"
import SimpleKnob from "./simple-knob.astro"
import CbaKnob from "./cba-knob.astro"
import BrutalistKnob from "./brutalist-knob.astro"
import ChickenHeadKnob from "./chicken-head-knob.astro"
import SimpleDotKnob from "./simple-dot-knob.astro"
import DaviesKnob from "./davies-knob.astro"
import FairfieldKnob from "./fairfield-knob.astro"
import GojiraKnob from "./gojira-knob.astro"
import OffsetKnob from "./offset-knob.astro"
import JhsKnob from "./jhs-knob.astro"
import ObneKnob from "./obne-knob.astro"
import ArrowKnob from "./arrow-knob.astro"
import BakelitKnob from "./bakelit-knob.astro"
import WalrusAudioKnob from "./walrus-audio-knob.astro"
import FlbKnob from "./flb-knob.astro"
import { Joystick } from "./joystick"
import KnurledKnob from "./knurled-knob.astro"
import LichtlaermAudioKnob from "./lichtlaerm-audio-knob.astro"
import RoundChickenHeadKnob from "./round-chicken-head-knob.astro"
import { KnobStateContainer } from "./knob-state-container"

type Props = Pick<
  Knob,
  "size" | "type" | "colors" | "isRotary" | "rotaryAngles" | "id"
>

const { size, type, colors, id, isRotary, rotaryAngles } = Astro.props
---

<KnobStateContainer {id} {isRotary} {rotaryAngles} client:load>
  {
    {
      arrow: <ArrowKnob {size} />,
      bakelit: <BakelitKnob {size} {colors} />,
      brutalist: <BrutalistKnob {size} {colors} />,
      cba: <CbaKnob {size} {colors} />,
      chicken: <ChickenHeadKnob {size} {colors} />,
      davies: <DaviesKnob {size} {colors} />,
      fairfield: <FairfieldKnob {size} {colors} />,
      flb: <FlbKnob {size} {colors} />,
      gojira: <GojiraKnob {size} {colors} />,
      jhs: <JhsKnob {size} {colors} />,
      joystick: <Joystick {id} client:load {size} />,
      knurled: <KnurledKnob {size} {colors} />,
      lichtlaerm: <LichtlaermAudioKnob {size} {colors} />,
      obne: <ObneKnob {size} {colors} />,
      offset: <OffsetKnob {size} />,
      roundchicken: <RoundChickenHeadKnob {size} {colors} />,
      simple: <SimpleKnob {size} {colors} />,
      simpledot: <SimpleDotKnob {size} {colors} />,
      walrus: <WalrusAudioKnob {size} {colors} />,
    }[type]
  }
</KnobStateContainer>
