---
import type { Knob } from "@types"

type Props = Pick<Knob, "colors" | "size">

const {
  size,
  colors = {
    tick: "#1F1B1C",
    primary: "#FFFDFE",
    secondary: "black",
  },
} = Astro.props
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 120 120"
>
  <g fill="none">
    <circle cx="60" cy="60" r="60" fill={colors.secondary} stroke-width="4"
    ></circle>
    <circle cx="60" cy="60" r="36" fill={colors.primary} stroke-width="4"
    ></circle>
    <polygon
      points="60,5 35,105 85,105"
      fill={colors.primary}
      stroke-width="4"
      stroke-linejoin="round"
      stroke={colors.primary}
      rx="4"
      ry="4"></polygon>
    <rect width="4" height="48" x="58" y="2" fill={colors.tick} rx="2" ry="2"
    ></rect>
  </g>
</svg>
