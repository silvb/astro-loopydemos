---
import type { Knob } from "@types"

type Props = Pick<Knob, "colors" | "size">

const {
  size,
  colors = {
    primary: "#1F1B1C",
    secondary: "#A6A6A6",
    tick: "#1F1B1C",
  },
} = Astro.props
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 120 120"
>
  <g fill="none">
    <circle cx="60" cy="60" r="60" fill={colors.secondary}></circle>
    <circle cx="60" cy="60" r="42" fill={colors.primary}></circle>
    <polygon points="40,24 60,6 80,24" fill={colors.primary}></polygon>
    <polygon points="48,20 60,1 72,20" fill={colors.primary}></polygon>
    <rect width="4" height="30" x="58" y="4" fill={colors.tick} rx="4" ry="4"
    ></rect>
  </g>
</svg>
