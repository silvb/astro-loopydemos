---
import type { Slider } from "@types"
import FaderFace from "./fader-face.astro"
import { SliderState } from "./slider-state"

interface Props extends Slider {
  pedalSlug: string
}

const { id, pedalSlug, size, colors, faderType, tilt } = Astro.props
---

<SliderState
  client:load
  {id}
  {pedalSlug}
  {size}
  {tilt}
  color={colors?.enclosure ?? "#333"}
>
  <FaderFace
    size={size.height}
    type={faderType}
    tickColor={colors?.tick}
    faceColor={colors?.face}
    slot="fader-face"
  />
</SliderState>
