---
interface Props {
  size: number
}

const { size } = Astro.props
const pixelSize = `${size}px`
---

<div class="momentary-indicator"></div>

<style define:vars={{ size: pixelSize }}>
  .momentary-indicator {
    @apply pointer-events-auto absolute left-0 top-0 -z-10 box-border scale-[2] rounded-full border-[10px] border-solid border-loopydemos-highlight-secondary-themed;
    width: var(--size);
    height: var(--size);
    animation: 600ms ease-out infinite momentaryAnimation;
  }

  @keyframes momentaryAnimation {
    0% {
      transform: scale(1);
      border-width: 8px;
      opacity: 1;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: scale(2);
      border-width: 0px;
      opacity: 0;
    }
  }
</style>
